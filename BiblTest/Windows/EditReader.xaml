<Window x:Class="BiblTest.Windows.EditReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiblTest.Windows"
        mc:Ignorable="d"
        Title="EditReader" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Фамилия" Margin="0 0 5 0"  Grid.Row="0" Grid.ColumnSpan="3" VerticalAlignment="Center" FontSize="30" FontWeight="Black" HorizontalAlignment="Right"/>
        <TextBlock Text="Имя" Margin="0 0 5 0"   Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Center" FontSize="30" FontWeight="Black" HorizontalAlignment="Right"/>
        <TextBlock Text="Отчество" Margin="0 0 5 0"   Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="Center" FontSize="30" FontWeight="Black" HorizontalAlignment="Right"/>
        <TextBlock Text="Дата рождения" Margin="0 0 5 0"   Grid.Row="3" Grid.ColumnSpan="3" VerticalAlignment="Center" FontSize="30" FontWeight="Black" HorizontalAlignment="Right"/>
        <TextBlock Text="Номер телефона" Margin="0 0 5 0"   Grid.Row="4" Grid.ColumnSpan="3" VerticalAlignment="Center" FontSize="30" FontWeight="Black" HorizontalAlignment="Right"/>
        <TextBox x:Name="LastNametxb" Grid.ColumnSpan="3" Grid.Column="4" VerticalAlignment="Center" FontSize="20" FontWeight="Black" HorizontalAlignment="Left" Height="40" Width="275"/>
        <TextBox x:Name="Nametxb"   Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="4" VerticalAlignment="Center" FontSize="20" FontWeight="Black" HorizontalAlignment="Left" Height="40" Width="275"/>
        <TextBox x:Name="Patronymictxb"   Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="4" VerticalAlignment="Center" FontSize="20" FontWeight="Black" HorizontalAlignment="Left" Height="40" Width="275"/>
        <DatePicker x:Name="Bdaytxb"   Grid.Row="3" Grid.ColumnSpan="3" Grid.Column="4" VerticalAlignment="Center" FontSize="20" FontWeight="Black" HorizontalAlignment="Left" Height="40" Width="275"/>
        <TextBox x:Name="Phonetxb"   Grid.Row="4" Grid.ColumnSpan="3" Grid.Column="4" VerticalAlignment="Center" FontSize="20" FontWeight="Black" HorizontalAlignment="Left" Height="40" Width="275"/>
        <Button x:Name="Savebtn" Click="Savebtn_Click" Content="Сохранить"  Grid.Row="6" Grid.ColumnSpan="3" Grid.Column="3" VerticalAlignment="Center" FontSize="20" FontWeight="Black" Height="40" Width="290"/>

    </Grid>
</Window>
