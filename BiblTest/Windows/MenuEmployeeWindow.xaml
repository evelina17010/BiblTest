<Window x:Class="BiblTest.Windows.MenuEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiblTest.Windows"
        mc:Ignorable="d"
        Title="MenuEmployeeWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="\Resourse\employee.png" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBlock Text="Иванова Катя Ивановна" FontSize="16" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Top" FontWeight="Bold" />
        <TextBlock Text="Id:00001" FontSize="10" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Foreground="Gray"/>
        <Button x:Name="readerBtn" Content="Читатели" Grid.Row="3" Grid.ColumnSpan="2" FontSize="15" Background="Wheat" VerticalContentAlignment="Center" Click="readerBtn_Click"/>
        <Button x:Name="bookBtn" Content="Книги" Grid.Row="4" Grid.ColumnSpan="2" FontSize="15" Background="LightPink" VerticalContentAlignment="Center" Click="bookBtn_Click"/>
        <Button x:Name="reportBtn" Content="Отчеты" Grid.Row="5" Grid.ColumnSpan="2" FontSize="15" Background="LightSkyBlue" VerticalContentAlignment="Center" Click="reportBtn_Click"/>
        <Button x:Name="exitBtn" Content="Выход" Grid.Row="6" Grid.ColumnSpan="2" Grid.RowSpan="2" FontSize="15" Background="Magenta" Foreground="Gold" VerticalContentAlignment="Center" Click="exitBtn_Click"/>
        <Frame x:Name="MenuFr" Grid.Column="2" Grid.ColumnSpan="6" Grid.RowSpan="8"/>
    </Grid>
</Window>
